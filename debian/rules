#!/usr/bin/make -f
# MAde with the aid of dh_make, by Craig Small
# Sample debian/rules that uses debhelper. GNU copyright 1997 by Joey Hess.
# Some lines taken from debmake, by Cristoph Lameter.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

build: build-stamp
build-stamp:
	dh_testdir

	./configure --prefix=/usr --sysconfdir=/etc --with-bonobo
	# Add here commands to compile the package.
	make #CFLAGS="-O2 -g -Wall"

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	-rm -rf build-stamp debian/substvars debian/*~ debian/tmp config.log

	# Add here commands to clean up after the build process.
	-$(MAKE) distclean
	rm -f libglade/macros/Makefile libglade/doc/Makefile plugins/perl/ext/Makefile.PL plugins/perl/ext/Makefile \
	plugins/perl/xsinit.c plugins/guile/Makefile gnumeric.keys config.cache
	dh_clean

# Build architecture-independent files here.
binary-indep: build
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build
#	dh_testversion
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	$(MAKE) install prefix=`pwd`/debian/tmp/usr sysconfdir=`pwd`/debian/tmp/etc

	rm -f `find ./debian/tmp/usr/ -name \*.a`
	dh_installdocs
	dh_installexamples
	dh_installmenu
#	dh_installinit
#	dh_installcron
	dh_installmanpages
	dh_installchangelogs
	dh_strip
	dh_installmime
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_makeshlibs
	#mv debian/tmp/usr/bin/gnumeric debian/tmp/usr/X11R6/bin/gnumeric
	dh_undocumented gnumeric.1 gnumeric-corba.1
	dh_md5sums
	dh_builddeb

source diff:                                                                  
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
